<!-- Put site-specific property overrides in this file. -->

<configuration>
	<property>
		<name>dfs.permissions</name>
		<value>false</value>
	</property>
	<property>
		<name>dfs.replication</name>
		<value>2</value>
	</property>
	<property>
		<name>dfs.nameservices</name>
		<value>bi</value>
	</property>
	<property>
		<name>dfs.ha.namenodes.bi</name>
		<value>nn1,nn2</value>
	</property>
	<property>
		<name>dfs.namenode.rpc-address.bi.nn1</name>
		<value>hadoop-namenode-01:9000</value>
	</property>
	<property>
		<name>dfs.namenode.http-address.bi.nn1</name>
		<value>hadoop-namenode-01:50070</value>
	</property>
	<property>
		<name>dfs.namenode.rpc-address.bi.nn2</name>
		<value>hadoop-namenode-02:9000</value>
	</property>
	<property>
		<name>dfs.namenode.http-address.bi.nn2</name>
		<value>hadoop-namenode-02:50070</value>
	</property>
	<property>
		<name>dfs.namenode.shared.edits.dir</name>
		<value>qjournal://zk-datanode-01:8485;zk-datanode-02:8485;zk-datanode-03:8485/bi</value>  <!-- 开发环境zk -->
		<!-- <value>qjournal://hadoop-datanode-01:8485;hadoop-datanode-02:8485;hadoop-datanode-03:8485/bi</value> -->	<!-- sit环境的zk -->
	</property>
	<property>
		<name>dfs.journalnode.edits.dir</name>
		<value>/home/dinpay/data/hdpdata/</value>
	</property>
	<property>
		<name>dfs.ha.automatic-failover.enabled</name>
		<value>true</value>
	</property>
	<property>
		<name>dfs.client.failover.proxy.provider.bi</name>
		<value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider
		</value>
	</property>
	<property>
		<name>dfs.ha.fencing.methods</name>
		<value>
			sshfence
			shell(/bin/true)
		</value>
	</property>
	<property>
		<name>dfs.ha.fencing.ssh.private-key-files</name>
		<value>/home/dinpay/.ssh/id_rsa</value>
	</property>
	<property>
		<name>dfs.image.transfer.bandwidthPerSec</name>
		<value>1048576</value>
	</property>
</configuration>
